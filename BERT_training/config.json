{
    "name": "IMDB_classifier",
    "n_gpu": 1,

    "arch": {
        "type": "BertClassifier",
        "args": {}
    },
    "train_data_loader":{
        "type": "IMDBDataloader",
        "args":{
            "datapath": "../data/imdb_train",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "valid_data_loader":{
        "type": "IMDBDataloader",
        "args":{
            "datapath": "../data/imdb_valid",
            "batch_size": 32,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
